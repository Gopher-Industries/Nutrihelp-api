{
    "env": { "es2021": true, "node": true, "browser": true },
    "extends": ["eslint:recommended"],
    "parserOptions": { "ecmaVersion": 2022, "sourceType": "module" },
    "ignorePatterns": ["node_modules/", "dist/", "build/", "coverage/"],
    "rules": {
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
      "eqeqeq": "error",
      "curly": "error"
    }
  }